@model IEnumerable<BookingSystem.Application.DTOs.AppointmentDto>

@{
    ViewData["Title"] = "Мои Закажувања";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Мои Закажувања</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Закажи нов термин
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Активност</th>
                        <th>Датум</th>
                        <th>Време</th>
                        <th>Времетраење</th>
                        <th>Статус</th>
                        <th>Белешки</th>
                        <th>Акции</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        var duration = (appointment.EndTime - appointment.StartTime).TotalMinutes;
                        <tr>
                            <td><strong>@appointment.ServiceType</strong></td>
                            <td>@appointment.StartTime.ToString("dd.MM.yyyy")</td>
                            <td>@appointment.StartTime.ToString("HH:mm") - @appointment.EndTime.ToString("HH:mm")</td>
                            <td>@duration мин</td>
                            <td>
                                @if (appointment.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Во очекување</span>
                                }
                                else if (appointment.Status == "Confirmed")
                                {
                                    <span class="badge bg-success">Потврдено</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Откажано</span>
                                }
                            </td>
                            <td>@(appointment.Notes ?? "-")</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Дали сте сигурни дека сакате да го избришете терминот?')">
                                        <i class="bi bi-trash"></i> Избриши
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Немате закажани термини</h4>
            <p>Закажете го вашиот прв термин со кликнување на копчето погоре.</p>
            <hr>
            <p class="mb-0">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-calendar-plus"></i> Закажи Термин
                </a>
            </p>
        </div>
    }
</div>