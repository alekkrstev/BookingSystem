<!DOCTYPE html>
<html lang="mk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Booking System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<script>
    // Glass Navbar Scroll Effect
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.glass-navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });

    // Active Link Highlight
    const currentLocation = window.location.pathname;
    const navLinks = document.querySelectorAll('.glass-link');
    navLinks.forEach(link => {
        if (link.getAttribute('href') === currentLocation) {
            link.classList.add('active');
        }
    });
</script>
<body>
    <header>
        <nav class="navbar navbar-expand-lg glass-navbar fixed-top">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand glass-brand" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon">🎮</span>
                    <span class="brand-text">ODAX</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler glass-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Items -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        
                        

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link glass-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-fill"></i>
                                    <span>Почетна</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link glass-link" asp-controller="Appointment" asp-action="Index">
                                    <i class="bi bi-calendar-check-fill"></i>
                                    <span>Мои Резервации</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link glass-link" asp-controller="Review" asp-action="MyReviews">
                                    <i class="bi bi-star-fill"></i>
                                    <span>Мои Reviews</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link glass-link" asp-controller="Activity" asp-action="Index">
                                    <i class="bi bi-tools"></i>
                                    <span>Управувај Активности</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link glass-link" asp-controller="Admin" asp-action="AdminDashboard">
                                    <i class="bi bi-speedometer2"></i>
                                    <span>Dashboard</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link glass-link" asp-controller="Activity" asp-action="Browse">
                                <i class="bi bi-grid-3x3-gap-fill"></i>
                                <span>Активности</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link glass-link" asp-controller="Review" asp-action="PlayroomReviews">
                                <i class="bi bi-chat-quote-fill"></i>
                                <span>Playroom Reviews</span>
                            </a>
                        </li>
                    </ul>

                    <!-- User Menu -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link glass-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu glass-dropdown dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item glass-dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Одјави се
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link glass-link glass-btn-login" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    <span>Логирај се</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link glass-link glass-btn-register" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i>
                                    <span>Регистрирај се</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Spacer за fixed navbar -->
        <div style="height: 80px;"></div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Booking System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Приватност</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>