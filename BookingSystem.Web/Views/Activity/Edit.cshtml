@model BookingSystem.Application.DTOs.CreateActivityDto

@{
    ViewData["Title"] = "Едитирај Активност";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4 text-center">
                        <i class="bi bi-pencil"></i> Едитирај Активност
                    </h3>

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <!-- Name (English) -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Име (Англиски)</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- NameMk (Macedonian) -->
                        <div class="mb-3">
                            <label asp-for="NameMk" class="form-label fw-bold">Име (Македонски)</label>
                            <input asp-for="NameMk" class="form-control" />
                            <span asp-validation-for="NameMk" class="text-danger"></span>
                        </div>

                       
                        <!-- Icon -->
                        <div class="mb-3">
                            <label asp-for="Icon" class="form-label fw-bold">Икона (Emoji)</label>
                            <input asp-for="Icon" class="form-control" maxlength="2" />
                            <small class="text-muted">Копирај emoji од: <a href="https://emojipedia.org" target="_blank">Emojipedia</a></small>
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        <!-- Price Per Hour -->
                        <div class="mb-3">
                            <label asp-for="PricePerHour" class="form-label fw-bold">Цена по час (денари)</label>
                            <input asp-for="PricePerHour" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="PricePerHour" class="text-danger"></span>
                        </div>

                        <!-- Max Players -->
                        <div class="mb-3">
                            <label asp-for="MaxPlayers" class="form-label fw-bold">Максимален број играчи</label>
                            <input asp-for="MaxPlayers" type="number" class="form-control" />
                            <span asp-validation-for="MaxPlayers" class="text-danger"></span>
                        </div>

                        <!-- Is Active -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-bold">
                                    Активна (достапна за резервации)
                                </label>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Ажурирај Активност
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Откажи
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}