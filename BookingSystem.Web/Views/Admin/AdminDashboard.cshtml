@model IEnumerable<BookingSystem.Application.DTOs.AppointmentDto>

@{
    ViewData["Title"] = "Админ Панел";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="admin-header mb-4">
        <div>
            <h2 class="text-white mb-2">
                <i class="bi bi-speedometer2"></i> Администраторска Табла
            </h2>
            <p class="text-white-50 mb-0">Преглед на сите резервации во системот</p>
        </div>
        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-icon">📊</div>
                <div class="stat-info">
                    <div class="stat-value">@Model.Count()</div>
                    <div class="stat-label">Вкупно</div>
                </div>
            </div>
            <div class="stat-card stat-pending">
                <div class="stat-icon">⏳</div>
                <div class="stat-info">
                    <div class="stat-value">@Model.Count(a => a.Status == "Pending")</div>
                    <div class="stat-label">Во очекување</div>
                </div>
            </div>
            <div class="stat-card stat-confirmed">
                <div class="stat-icon">✅</div>
                <div class="stat-info">
                    <div class="stat-value">@Model.Count(a => a.Status == "Confirmed")</div>
                    <div class="stat-label">Потврдено</div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Filters -->
        <div class="filters-bar mb-4">
            <div class="filter-group">
                <label class="filter-label">Филтер по активност:</label>
                <select id="activityFilter" class="form-select form-select-sm">
                    <option value="">Сите</option>
                    <option value="Sony PlayStation">🎮 Sony PlayStation</option>
                    <option value="Пикадо">🎯 Пикадо</option>
                    <option value="Билјард">🎱 Билјард</option>
                    <option value="Фудбалче">⚽ Фудбалче</option>
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label">Филтер по статус:</label>
                <select id="statusFilter" class="form-select form-select-sm">
                    <option value="">Сите</option>
                    <option value="Pending">Во очекување</option>
                    <option value="Confirmed">Потврдено</option>
                    <option value="Cancelled">Откажано</option>
                </select>
            </div>
        </div>

        <!-- Appointments Grid -->
        <div class="row g-3" id="appointmentsGrid">
            @foreach (var appointment in Model.OrderBy(a => a.StartTime))
            {
                var isPast = appointment.EndTime < DateTime.Now;
                var isToday = appointment.StartTime.Date == DateTime.Today;
                var duration = (appointment.EndTime - appointment.StartTime).TotalMinutes;

                <div class="col-md-6 col-lg-4 col-xl-3 appointment-item"
                     data-activity="@appointment.ActivityName"
                     data-status="@appointment.Status">
                    <div class="admin-appointment-card @(isPast ? "past" : "") @(isToday ? "today" : "")">
                        <!-- Header -->
                        <div class="admin-card-header">
                            <div class="d-flex align-items-center gap-2">
                                <span class="activity-icon">@appointment.ActivityIcon</span>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">@appointment.ActivityName</h6>
                                    <small class="text-muted">#@appointment.Id</small>
                                </div>
                            </div>
                            @if (isToday)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> ДЕНЕС
                                </span>
                            }
                        </div>

                        <!-- Body -->
                        <div class="admin-card-body">
                            <div class="info-row">
                                <i class="bi bi-person"></i>
                                <span>@appointment.UserName</span>
                            </div>
                            <div class="info-row">
                                <i class="bi bi-calendar3"></i>
                                <span>@appointment.StartTime.ToString("dd.MM.yyyy")</span>
                            </div>
                            <div class="info-row">
                                <i class="bi bi-clock"></i>
                                <span>@appointment.StartTime.ToString("HH:mm") - @appointment.EndTime.ToString("HH:mm")</span>
                            </div>
                            <div class="info-row">
                                <i class="bi bi-hourglass-split"></i>
                                <span>@duration мин</span>
                            </div>
                            @if (!string.IsNullOrEmpty(appointment.Notes))
                            {
                                <div class="info-row">
                                    <i class="bi bi-people"></i>
                                    <span>@appointment.Notes</span>
                                </div>
                            }
                        </div>

                        <!-- Footer -->
                        <div class="admin-card-footer">
                            <form asp-action="UpdateStatus" asp-route-id="@appointment.Id" method="post" class="status-form">
                                <select name="status" class="form-select form-select-sm status-select status-@appointment.Status.ToLower()"
                                        onchange="this.form.submit()">
                                    <option value="Pending" selected="@(appointment.Status == "Pending")">⏳ Во очекување</option>
                                    <option value="Confirmed" selected="@(appointment.Status == "Confirmed")">✅ Потврдено</option>
                                    <option value="Cancelled" selected="@(appointment.Status == "Cancelled")">❌ Откажано</option>
                                </select>
                            </form>

                            <form asp-action="DeleteAppointment" asp-route-id="@appointment.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-delete-admin"
                                        onclick="return confirm('Дали сте сигурни?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">📋</div>
            <h3>Нема резервации</h3>
            <p>Моментално нема закажани термини во системот.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Filtering
        const activityFilter = document.getElementById('activityFilter');
        const statusFilter = document.getElementById('statusFilter');

        function filterAppointments() {
            const activity = activityFilter.value;
            const status = statusFilter.value;

            document.querySelectorAll('.appointment-item').forEach(item => {
                const matchActivity = !activity || item.dataset.activity === activity;
                const matchStatus = !status || item.dataset.status === status;

                if (matchActivity && matchStatus) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        activityFilter.addEventListener('change', filterAppointments);
        statusFilter.addEventListener('change', filterAppointments);
    </script>
}