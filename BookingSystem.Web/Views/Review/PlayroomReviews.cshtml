@model IEnumerable<BookingSystem.Application.DTOs.ReviewDto>

@{
    ViewData["Title"] = "ODAX Playroom Reviews";
    var averageRating = Model.Any() ? Model.Average(r => r.Rating) : 0;
    var totalReviews = Model.Count();
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="playroom-header text-center mb-5">
        <div class="playroom-icons">🎮 🎯 🎱 ⚽</div>
        <h1 class="text-white mb-3">ODAX Playroom Reviews</h1>
        <p class="text-white-50 mb-4">Што кажуваат нашите посетители</p>

        @if (totalReviews > 0)
        {
            <div class="rating-summary">
                <div class="average-rating">
                    <span class="rating-number">@averageRating.ToString("F1")</span>
                    <span class="rating-stars">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(averageRating))
                            {
                                <span style="color: gold; font-size: 2rem;">⭐</span>
                            }
                            else
                            {
                                <span style="color: rgba(255,255,255,0.3); font-size: 2rem;">⭐</span>
                            }
                        }
                    </span>
                    <p class="text-white-50 mt-2">Базирано на @totalReviews @(totalReviews == 1 ? "рецензија" : "рецензии")</p>
                </div>
            </div>
        }

        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            <div>
            <a asp-action="CreatePlayroomReview" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-star"></i> Остави Review
            </a>
            </div>
        }
    </div>

    <!-- Reviews Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var review in Model.OrderByDescending(r => r.CreatedAt))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="review-card">
                        <div class="review-header">
                            <div class="review-user">
                                <div class="user-avatar">@review.UserName.Substring(0, 1).ToUpper()</div>
                                <div>
                                    <h6 class="mb-0">@review.UserName</h6>
                                    <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                            </div>
                            <div class="review-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <span class="star filled">⭐</span>
                                    }
                                    else
                                    {
                                        <span class="star empty">⭐</span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="review-body">
                            <p class="review-comment">@review.Comment</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">⭐</div>
            <h3>Нема reviews сè уште</h3>
            <p>Биди првиот кој ќе остави review за ODAX Playroom!</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="CreatePlayroomReview" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-star"></i> Остави Review
                </a>
            }
        </div>
    }
</div>