@model BookingSystem.Application.DTOs.CreateReviewDto

@{
    var isPlayroomReview = ViewBag.IsPlayroomReview as bool? ?? false;
    ViewData["Title"] = isPlayroomReview ? "Рецензија за ODAX Playroom" : "Додади Рецензија";
    var activity = ViewBag.Activity as BookingSystem.Application.DTOs.ActivityDto;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-4">

                    @if (isPlayroomReview)
                    {
                        <!-- Playroom Review Header -->
                        <div class="text-center mb-4">
                            <div style="font-size: 5rem;">🎮🎯🎱⚽</div>
                            <h3 class="mt-3">ODAX Playroom</h3>
                            <p class="text-muted">Остави review за целиот простор</p>
                        </div>
                    }
                    else if (activity != null)
                    {
                        <!-- Activity Review Header -->
                        <div class="text-center mb-4">
                            <div style="font-size: 4rem;">@activity.Icon</div>
                            <h3 class="mt-3">@activity.NameMk</h3>
                            <p class="text-muted">@activity.Description</p>
                        </div>
                    }

                    <hr class="my-4">

                    <h4 class="text-center mb-4">Остави Review</h4>

                    <form asp-action="Create" method="post" id="reviewForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="ActivityId" />
                        <input type="hidden" asp-for="AppointmentId" />
                        <input type="hidden" asp-for="ReviewType" />

                        <!-- Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Рејтинг</label>
                            <div class="rating-stars text-center" id="ratingStars">
                                <span class="star" data-rating="1">⭐</span>
                                <span class="star" data-rating="2">⭐</span>
                                <span class="star" data-rating="3">⭐</span>
                                <span class="star" data-rating="4">⭐</span>
                                <span class="star" data-rating="5">⭐</span>
                            </div>
                            <input type="hidden" asp-for="Rating" id="ratingInput" data-val="true" data-val-required="Рејтингот е задолжителен" />
                            <span asp-validation-for="Rating" class="text-danger" id="ratingError"></span>
                        </div>

                        <!-- Comment (Optional) -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Коментар (опционално)</label>
                            <textarea name="Comment" id="Comment" class="form-control" rows="5"
                                      placeholder="Напишете го вашето мислење... (опционално)"
                                      data-val="false"></textarea>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-send"></i> Испрати review
                            </button>
                            <a asp-action="@(isPlayroomReview ? "PlayroomReviews" : "MyReviews")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Откажи
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Star rating system
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('ratingInput');
        const ratingError = document.getElementById('ratingError');
        const submitBtn = document.getElementById('submitBtn');
        let selectedRating = 0;

        stars.forEach(star => {
            star.addEventListener('click', function() {
                selectedRating = parseInt(this.dataset.rating);
                ratingInput.value = selectedRating;
                ratingError.textContent = ''; // Clear error
                updateStars();
            });

            star.addEventListener('mouseover', function() {
                const hoverRating = parseInt(this.dataset.rating);
                highlightStars(hoverRating);
            });
        });

        document.getElementById('ratingStars').addEventListener('mouseout', function() {
            highlightStars(selectedRating);
        });

        function highlightStars(rating) {
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.style.opacity = '1';
                    star.style.transform = 'scale(1.3)';
                    star.style.filter = 'drop-shadow(0 0 5px gold)';
                } else {
                    star.style.opacity = '0.3';
                    star.style.transform = 'scale(1)';
                    star.style.filter = 'none';
                }
            });
        }

        function updateStars() {
            highlightStars(selectedRating);
        }

        // Style stars
        stars.forEach(star => {
            star.style.cursor = 'pointer';
            star.style.fontSize = '2.5rem';
            star.style.transition = 'all 0.2s ease';
            star.style.display = 'inline-block';
            star.style.margin = '0 5px';
        });

        // Form validation
        document.getElementById('reviewForm').addEventListener('submit', function(e) {
            if (selectedRating === 0) {
                e.preventDefault();
                ratingError.textContent = 'Рејтингот е задолжителен';
                ratingError.style.display = 'block';
                return false;
            }
        });
    </script>
}